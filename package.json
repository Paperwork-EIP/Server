{
  "name": "server",
  "version": "1.0.0",
  "description": "Paperwork server",
  "main": "index.js",
  "scripts": {
    "start": "node ./bin/start.js",
    "dev": "nodemon ./bin/start.js",
    "test": "jest",
    "test:watch": "jest --watchAll=true",
    "test:coverage": "jest --coverage=true",
    "test:all": "jest --watchAll=true --coverage=true",
    "prepare": "npx husky install",
    "lint-staged": "lint-staged"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "sql-template-strings": "^2.2.2"
  },
  "jest": {
    "verbose": true,
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "src/components/index.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "*.{js, ts, tsx}": [
      "eslint --cache --quiet --fix"
    ]
  },
  "devDependencies": {
    "eslint": "^8.25.0",
    "eslint-plugin-jest": "^27.1.1",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.3.1"
  }
}
